@model ParksViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section id="one" class="wrapper style2">
    <div class="inner">
        <div class="grid-style">
            @foreach (ParkModel park in Model.Parks)
            {
                <div>
                    <div class="box">
                        <div class="image fit">
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@park.ParkCode">
                                <input type="hidden" asp-for="@park.ParkCode" />
                                <img src="~/images/parks/@(park.ParkCode.ToLower()).jpg" />
                            </a>
                        </div>
                        <div class="content">
                            <header class="align-center">
                                <p>@park.State</p>
                                <h2>@park.ParkName</h2>
                            </header>
                            <p>@park.ParkDescription</p>
                            <footer class="align-center">
                                <a class="button alt" asp-controller="Home" asp-action="Detail" asp-route-id="@park.ParkCode">
                                    Learn More
                                    <input type="hidden" asp-for="@park.ParkCode" />
                                </a>
                            </footer>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>